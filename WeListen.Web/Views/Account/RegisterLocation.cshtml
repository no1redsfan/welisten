@model WeListen.Web.Viewmodels.Account.RegisterLocationViewModel

<h2>Create New Location/Event</h2>
<br/>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>New Location/Event</legend>

        @Html.HiddenFor(model => model.WebLocation.LocationId)
        

        <div class="editor-label all">
            @Html.LabelFor(model => model.WebLocation.UserName)
        </div>
        <div class="editor-field all">
            @Html.EditorFor(model => model.WebLocation.UserName)
            @Html.ValidationMessageFor(model => model.WebLocation.UserName)
        </div>
        
        <div class="editor-label all">
            @Html.LabelFor(model => model.WebLocation.Zipcode)
        </div>
        <div class="editor-field all">
            @Html.EditorFor(model => model.WebLocation.Zipcode)
            @Html.ValidationMessageFor(model => model.WebLocation.Zipcode)
        </div>
        <br/>
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
    
}

<div>
    @Html.ActionLink("Back to Home", "Index", "Songs")
</div>
